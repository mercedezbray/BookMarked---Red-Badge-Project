@model BookMarked.Models.Review.ReviewDetail
@using BookMarked.Models.Comment;
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var listOfComments = (IList<CommentListItem>) ViewData["ListOfComments"];
}

<h1>Review Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ReviewId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ReviewId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.OwnerId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OwnerId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.VolumeId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VolumeId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.VolumeTitle)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VolumeTitle)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RatingId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RatingId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ReviewContent)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ReviewContent)
        </dd>
    </dl>
</div>

@{
    if (listOfComments.Count == 0)
    {
        <h2>No Comments on this Review</h2>
    }
    else
    {
        <h2>Comments on this Review</h2>
        foreach (var comment in listOfComments)
        {
            <div>
            <p>Comment: @comment.CommentContent</p>
            <p>Owner Id: @comment.OwnerId</p>
            </div>
            <hr />

        }
    }

}

<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ReviewId }) |
    <a asp-action="Index">Back to List</a> |
    <a asp-controller="Comment"
        asp-action="Create">Leave a Comment on this Review!</a>
</div>
